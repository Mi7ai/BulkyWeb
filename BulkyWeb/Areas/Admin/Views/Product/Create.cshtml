@model ProductViewModel
<div class="card shadow border-0 mt-4>">
    <div id="bg-gradient1" class="card-header ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-secondary py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border mt-3 p-3">
                <div class="row mb-3">
                    @*finds type="text" base on category and also the name for the label*@
                    <label asp-for="@Model.Product.Title" class="p-0"></label>
                    <input asp-for="@Model.Product.Title" class="form-control" />
                    <span asp-validation-for="@Model.Product.Title" class="text-danger"></span>

                    <label asp-for="@Model.Product.Description" class="p-0"></label>
                    <input asp-for="@Model.Product.Description" class="form-control" />
                    <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>

                    <label asp-for="@Model.Product.ISBN" class="p-0"></label>
                    <input asp-for="@Model.Product.ISBN" class="form-control" />
                    <span asp-validation-for="@Model.Product.ISBN" class="text-danger"></span>

                    <label asp-for="@Model.Product.Author" class="p-0"></label>
                    <input asp-for="@Model.Product.Author" class="form-control" />
                    <span asp-validation-for="@Model.Product.Author" class="text-danger"></span>

                    <label asp-for="@Model.Product.Price" class="p-0"></label>
                    <input asp-for="@Model.Product.Price" class="form-control" />
                    <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>

                    <label asp-for="@Model.Product.Price1to50" class="p-0"></label>
                    <input asp-for="@Model.Product.Price1to50" class="form-control" />
                    <span asp-validation-for="@Model.Product.Price1to50" class="text-danger"></span>

                    <label asp-for="@Model.Product.Price50" class="p-0"></label>
                    <input asp-for="@Model.Product.Price50" class="form-control" />
                    <span asp-validation-for="@Model.Product.Price50" class="text-danger"></span>

                    <label asp-for="@Model.Product.Price100" class="p-0"></label>
                    <input asp-for="@Model.Product.Price100" class="form-control" />
                    <span asp-validation-for="@Model.Product.Price100" class="text-danger"></span>

                    <label asp-for="@Model.Product.CategoryId" class="p-0"></label>
                    <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-control">
                        <option disabled selected>Select option</option>
                    </select>
                    <span asp-validation-for="@Model.Product.CategoryId" class="text-danger"></span>

                    <label asp-for="@Model.Product.ImageUrl" class="p-0"></label>
                    <input asp-for="@Model.Product.ImageUrl" class="form-control" />
                    <span asp-validation-for="@Model.Product.ImageUrl" class="text-danger"></span>
                </div>
                <div class="row text-center">
                    <div class="col-6 ">
                        <button class="btn btn-primary form-control" type="submit">Create</button>
                    </div>
                    <div class="col-6 ">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@*By adding this the model validation do not go to server side*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}