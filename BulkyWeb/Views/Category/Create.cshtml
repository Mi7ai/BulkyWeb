@model Category

<form method="post">
    <div class="border mt-3 p-3">
        <div class="row p-2">
            <h2 class="text-secondary">Create Category</h2>
        </div>
        <div class="row mb-3">
            @*finds type="text" base on category and also the name for the label*@
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row text-center">
            <div class="col-6 ">
                <button class="btn btn-primary form-control" type="submit">Create</button>
            </div>
            <div class="col-6 ">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
            </div>
        </div>
    </div>
</form>

@*By adding this the model validation do not go to server side*@
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}