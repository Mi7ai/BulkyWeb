@model Category
    <div class="card shadow border-0 mt-4>">
        <div id="bg-gradient1" class="card-header ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-secondary py-2">Delete Category</h2>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <form method="post" class="row">
                <div class="border mt-3 p-3">
                    <div class="row mb-3">
                        @*not needed if the name of the model is the same as Id otherwise it is a must*@
                        <input asp-for="Id" hidden />

                        @*finds type="text" base on category and also the name for the label*@
                        <label asp-for="Name" class="p-0"></label>
                        <input asp-for="Name" class="form-control" disabled />

                        <label asp-for="DisplayOrder" class="p-0"></label>
                        <input asp-for="DisplayOrder" class="form-control" disabled />
                    </div>
                    <div class="row text-center">
                        <div class="col-6 ">
                            <button class="btn btn-primary form-control" type="submit">Delete</button>
                        </div>
                        <div class="col-6 ">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>